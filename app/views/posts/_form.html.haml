.wrapper
  = render "share/side-bar"
  .main-container
    .main-wrapper
      .top-container
        = form_with model: @post, local: true do |f|
          - if @post.errors.any?
            .post-form_errors
              %h2= "#{@post.errors.full_messages.count}件のエラーが発生しました。"
              %ul
                - @post.errors.full_messages.each do |message|
                  %li= message
          .form-wrapper
            .form-area
              .form-area_label
                = f.label :title, "タイトル"
                .form-area_label_info
                  必須
              = f.text_field :title, class: "form-area_input f_field"

            .image-area
              .image-area_label
                = f.label :post_image do
                  = icon('fa', 'image', class: 'icon')
              = f.file_field :post_image

            .form-area
              .form-area_label
                = f.label :detail, "詳細"
                .form-area_label_info
                  必須
              = f.text_area :detail, class: "form-area_input f_area"

            .form-area
              .form-area_label
                = f.label :prefecture_id, "都道府県"
                .form-area_label_info
                  必須
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt:"--"}, {class: "form-area_input f_select"}

            .form-area
              .form-area_label
                = f.label :accept_id, "募集人数"
              = f.collection_select :accept_id, Accept.all, :id, :name, {prompt:"--"}, {class: "form-area_input f_select"}

            .form-area
              .form-area_label
                = f.label :date, "日にち"
              = f.date_field :date,class: "form-area_input f_select"

            .form-area
              .form-area_time
                .form-area_time_half
                  .form-area_label
                    開始予定
                  = f.time_select :start_time, {include_blank: true, ignore_date: true, minute_step: 5}, {class: "form-area_time_half_input"}
                .form-area_time_half
                  .form-area_label
                    終了予定
                  = f.time_select :end_time, {include_blank: true, ignore_date: true, minute_step: 5}, {class: "form-area_time_half_input"}
                

            .btn-area
              = f.submit "登録", class: "actions_btn"
              = link_to "戻る", :back, class: "back_btn"
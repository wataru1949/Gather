= form_with model: @search_form, scope: "search", url: :posts, html: { method: :get, class: "search" }, local: true do |f|
  %h2.search_header
    投稿を検索する
  .search-area
    .search-area_form
      .search-area_form-label
        = f.label :prefecture_id, "都道府県"
      = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank:"--"}
    .search-area_form
      .search-area_form-label
        = f.label :city, "市区町村"
      = f.text_field :city
  .search-area
    .search-area_form
      .search-area_form-label
        = f.label :category, "カテゴリー"
      = f.text_field :category, id: "category-search", autocomplete: "off"
      #category-search-result
    .search-area_form
      .search-area_form-label
        = f.label :event_date, "日にち"
      = f.date_field :event_date
  = f.submit "検索", class: "submit-btn btn"
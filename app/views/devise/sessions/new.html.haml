.wrapper
  .session-left
    .session-menu
      .session-menu_title
        ログイン
      .session-menu_list 
  .session-right
    = form_with model: @user, url: user_session_path, class: 'login_user', local: true do |f|
      .field
        .field_label
          = f.label :email
        = f.email_field :email, autofocus: true, class: "field_form", autocomplete: "email"
      .field
        .field_label
          = f.label :password
        = f.password_field :password, class: "field_form", autocomplete: "current-password"

      -# ログインを記憶する

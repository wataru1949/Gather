.header
  = content_tag(:span, flash.notice, class: "notice") if flash.notice
  = content_tag(:span, flash.alert, class: "alert") if flash.alert
  .header_mypage
    - if user_signed_in?
      = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "login-link"
    - else
      = link_to '新規登録', new_user_registration_path, class: "login-link"
      = link_to 'ログイン', user_session_path, class: "login-link"
